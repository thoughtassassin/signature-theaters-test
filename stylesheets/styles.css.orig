/*
@signature-red: #CE0E2D;
@signature-yellow: #FFC629;
*/

html,
body {
    font-family: 'Play', sans-serif;
    -webkit-font-smoothing: antialiased;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 1rem;
}

html {
    background: none;
}

body {
    background: #000 url('/static/sigtheaters_video_poster.jpg') no-repeat center center;
    background-size: cover;
}

#__next,
#__next > div {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
}

header .navbar,
.navbar-logo,
header {
    display: inline-block;
    font-family: 'Play', sans-serif;
}

header .navbar-logo {
    float: left;
    margin: 2px 0 2px 20px;
}

#logo {
    width: 170px;
    height: 56px;
}

header .navbar {
    position: relative;
    top: 0;
    border: none;
    border-radius: 0;
    border-bottom: 1px solid #000;
    display: flex;
    align-items: center;
}

header .navbar ul {
    -webkit-transition: max-height 0.5s ease-out;
    transition: max-height 0.5s ease-out;
}

.navbar-nav {
    margin-left: 0;
    overflow: visible;
}

.navbar ul {
    overflow: hidden;
    position: absolute;
    top: 56px;
    left: -10px;
    max-height: 0;
    background: rgba(0, 0, 0, 0.8);
    margin: 0;
    padding: 0;
}

.navbar ul li {
    margin-left: 10px;
}

.navbar ul.new-class {
    
    max-height: 1000px;
}

header .navbar a {
    text-decoration: none;
}

header .navbar a:focus {
    outline: 1px dotted #FFF;
}

.navbar-toggle {
    border-color: #000;
}

header .navbar li a:hover,
header .navbar li a:focus {
 text-shadow: 2px 2px 10px #CE0E2D,
    -2px -2px 10px #CE0E2D,
    -2px 2px 10px #CE0E2D,
    2px -2px 10px #CE0E2D;
}

.navbar-toggle:focus,
.navbar-inverse .navbar-toggle,
.navbar-inverse .navbar-toggle:focus {
    background-color: #000;
    outline: none;
}

.navbar-inverse .navbar-toggle:focus,
header .navbar .navbar-toggle.open {
 box-shadow: 2px 2px 10px rgba(255,198,39,0.5),
    -2px -2px 10px rgba(255,198,39,0.5),
    -2px 2px 10px rgba(255,198,39,0.5),
    2px -2px 10px rgba(255,198,39,0.5);
}

.navbar-collapse {
    float: left;
}

.navbar-nav {
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 5px;
    line-height: 50px;
    margin-left: 20px;
}

.navbar-inverse .navbar-toggle {
    background: none;
    cursor: pointer;
    border: 1px solid #FFC629;
    margin-left: 20px;
}

.navbar-inverse .navbar-toggle .icon-bar {
    background: #FFC629;
}

.navbar-inverse .navbar-toggle:hover {
    background: none;
}

.navbar-nav > li {
    display: inline-block;
}

.navbar-inverse .navbar-nav > li > a {
    color: #DDD;
}

header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    margin-bottom: 0;
    padding: 0;
    margin: 0;
    padding: 0;
}

header::after {
    content: " ";
    background: url(/static/triangle.svg);
    position: absolute;
    width: 100px;
    right: -100px;
    top: 0;
    box-shadow: none;
    z-index: 3;
    height: 100px;
}

.navbar-inverse {
    background-color: rgba(0, 0, 0, 1);
}

section {
    width: 100%;
    min-height: 100%;
    background: #000;
    color: #FFF;
    position: relative;
    top: 100%;
    display: flex;
    align-items: center;
    transition: all 1s ease;
    padding-bottom: 80px;
    border-top: 1px solid #FFC629;
}

.opening-content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-direction: column;
    width: 100%;
    height: 100%;
    color: #FFF;
    opacity: 1;
    padding: 0 0 2rem 0;
    margin: 0;
}

.opening-content div {
    background: rgba(0,0,0,0.8);
    opacity: 0;
    animation: introduce 0.3s ease-in 1.5s;
    animation-fill-mode: forwards;
    padding: 0.5rem 0.5rem 0.1rem;
    border-radius: 2px;
}

.opening-content h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2rem;
    opacity: 0.8;
    margin-left: 20px;
    letter-spacing: 20px;
    color: #FFC629;
    text-align: center;
}

.opening-content div div {
    display: flex;
    background: none;
}

.opening-content ul {
    font-size: 1rem;
    list-style: none;
    letter-spacing: 2px;
    display: flex;
    opacity: 0.8;
    justify-content: space-around;
    padding: 0 1rem;
    width: 100%;
    text-transform: uppercase;
    font-family: Helvetica;
    font-weight: 200;
}
    

.experience,
.contact {
    background: url(/static/blackmamba.png);
}

h1 {
    color: #999;
    text-transform: uppercase;
    letter-spacing: 10px;
    font-size: 40px;
}

h2 {
    color: #FFC629;
    text-shadow: 2px 2px 10px #CE0E2D,
    -2px -2px 10px #CE0E2D,
    -2px 2px 10px #CE0E2D,
    2px -2px 10px #CE0E2D;
    font-size: 30px;
    margin-bottom: 10px;
    margin-top: 0;
}

.btn-default {
    background-color: #000;
    border-color: #CCC;
    color: #CCC;
    text-shadow: 1px 1px 1px #000,
    -5px -1px 1px #000,
    -5px 1px 1px #000,
    1px -1px 1px #000;
    border-width: 2px;
}

.btn-default:hover,
.btn-default:active,
.btn-default:focus,
.btn-default:active:hover {
    background-color: #000;
    border-color: #CCC;
    color: #FFF;
    text-shadow: 1px 1px 1px #000,
    -1px -1px 1px #000,
    -1px 1px 1px #000,
    1px -1px 1px #000;
    box-shadow: 2px 2px 2px #FFC629,
    -2px -2px 2px #FFC629,
    -2px 2px 2px #FFC629,
    2px -2px 2px #FFC629;
    position: relative;
}

.btn-default:active {
    top: 1px;
}

.section-button {
    margin: 60px 0 0;
    padding-bottom: 10px;
}

#contact .section-button {
    margin: 20px 0 0;
}

#contact .error ~ .section-button {
    margin: 7px 0 0;
}

#contact .section-button .btn {
 width: 100%;
 margin-top: 8px;
 font-size: 1.5rem;
}

.form-control {
    font-size: 20px;
    padding: 3px 12px;
}

.form-group {
    margin-bottom: 2rem;
}

.form-group.error {
    margin-bottom: 0.41rem;
}

.form-group.error input,
.form-group.error textarea {
    border: 1px solid #CE0E2D;
    box-shadow: 1px 1px 1px #CE0E2D,
    -1px -2px 1px #CE0E2D,
    -1px 1px 1px #CE0E2D,
    1px -2px 1px #CE0E2D;
}

.form-group.error label {
    text-shadow: 2px 2px 2px #CE0E2D,
    -2px -2px 2px #CE0E2D,
    -2px 2px 2px #CE0E2D,
    2px -2px 2px #CE0E2D;
}

.alert-success {
    font-size: 18px;
    line-height: 22px;
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.5rem 2rem;
    background: #28a745!important;
    color: #FFF;
    box-shadow: 2px 2px 2px #000;
    animation: fade-in 0.5s ease;
}

.alert-success span.message {
    text-shadow: 2px 2px 2px rgba(0,0,0,0.5),
    -2px -2px 2px rgba(0,0,0,0.5),
    -2px 2px 2px rgba(0,0,0,0.5),
    2px -2px 2px rgba(0,0,0,0.5);
}

.alert-success button,
.alert-success button:hover {
    color: #FFF;
    position: absolute;
    top: 5px;
    right: 5px;
    font-size: 1.5rem;
    opacity: 0.6;
    padding-bottom: 3px;
    line-height: 14px;
    text-shadow: 2px 2px 2px rgba(0,0,0,0.5),
    -2px -2px 2px rgba(0,0,0,0.5),
    -2px 2px 2px rgba(0,0,0,0.5),
    2px -2px 2px rgba(0,0,0,0.5);
}

.error-message {
    font-size: 18px;
    background: #CE0E2D;
    color: #FFF;
    padding: 0 5px;
    margin-left: 2px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    font-weight: 700;
    display: inline-block;
}

.cls-1 {
    width: 40px;
    height: 40px;
}

.fullscreen-bg {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    z-index: -100;
    height: 100%;
    width: 100%;
    display: none;
}

.fullscreen-bg__video {
    position: absolute;
    top: 0;
    left: 0;
    min-height: 100%;
    min-width: 100%;
    opacity: 1;
}

.fade-bottom {
    width: 100%;
    height: 100%;
    opacity: 0.8;
    position: absolute;
}

@keyframes introduce {
    0%{
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

